	* {
		margin: 0;
		padding: 0;
	}

	body {
		background-color: #e0e0e3;
		line-height: 1.5;
	}


	.container a{
		color: #000;
	}
	main {
		padding: 30px;
		font-family: "Open Sans", "Helvetica Neue", "DejaVu Sans", Arial, "PingFang SC", "Noto Sans CJK SC", "Hiragino Sans GB", "微软雅黑", Helvetica, sans-serif;
		text-decoration: none;
	}

	.posts {
		padding: 15px 0;
	}

	.post {
		border-bottom: 1px solid #ddd;
		padding: 10px 0;
	}

	.post a {
		text-decoration: none;
	}
	.posts a,.post-time {
        color:#000;
        font-size: 16px;
    }

	.post a:hover {
		text-decoration: underline;
		color: red;
	}

	.post-time {
		float: right;
	}

	.col-box-author {
		text-align: center
	}

	.col-box-author .avatar {
		width: 135px;
		height: 135px;
		border-radius: 100%;
		margin: 20px auto;
		display: block
	}

	.col-box-author .name {
		font-size: 16px
	}

	.col-box-author .contact {
		margin-top: 10px
	}

	.col-box-author .contact a {
		background: #999;
		color: #eee;
		padding: 5px 10px;
		text-decoration: none;
		border-radius: 5px;
		white-space: nowrap
	}

	.col-box-author .contact a:hover {
		transition: background 0.3s ease;
		background: #666
	}

	.wrapper{
		word-break: break-all;
	}

	@media screen and (min-width: 1200px) {
		.wrapper {
			width: 1100px;
			margin: 50px auto;
			/*box-shadow: 0px 0px 5px 2px #000;*/
			box-shadow: 0 1px 4px #999;
			outline: 1px solid #CCC
			min-height: 600px;
			word-break: break-all;
		}
		.header{
			min-width:1200px;
		}
		.blog-title{
			width:1100px;
			margin:0 auto;
		}
		.container {
			width: 800px;
			float: left;
			background-color: #fff;
			min-height: 600px;
		}

		.container2 {
			width: 300px;
			float: left;
		}

	}

	@media screen and (max-width:900px) and (min-width:400px){
		.wrapper{
			width: 98%;
			margin: 0 auto;
			color:#000;
			/*box-shadow: 0px 0px 5px 2px #000;*/
			box-shadow: 0 1px 4px #999;
			outline: 1px solid #CCC
			min-height: 600px;
			word-break: break-all;
		}
		.header{
			min-width:400px;
		}
		.blog-title{
			margin-left: 20px;
		}
		.container {
			width: 100%;
			background-color: #fff;
			min-height: 600px;
		}
		.container2 {
			width: 100%;
		}

	}
	@media  screen and (max-width: 400px) {
		wrapper{
			width: 98%;
			margin: 0 auto;
			color:#000;
			/*box-shadow: 0px 0px 5px 2px #000;*/
			box-shadow: 0 1px 4px #999;
			outline: 1px solid #CCC
			min-height: 600px;
			word-break: break-all;
		}
		.header{
			width:100%;
		}
		.blog-title{
			margin-left: 20px;
		}
		.container {
			width: 100%;
			background-color: #fff;
			min-height: 600px;
		}
		.container2 {
			width: 100%;
		}
	}
